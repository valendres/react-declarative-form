{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2017",
            "es6",
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true
    },
    "exclude": [
        "node_modules"
    ]
}
